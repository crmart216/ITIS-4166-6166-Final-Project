generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int             @id @default(autoincrement())
  title       String          @unique
  category_id Int
  author_id   Int
  description String?         @default("")
  ingredients String
  steps       String
  notes       String?         @default("")
  author      User            @relation(fields: [author_id], references: [id], onDelete: Cascade)
  category    Recipe_Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  reviews     Review[]

  @@map("recipes")
}

model Recipe_Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  recipes Recipe[]

  @@map("recipe_categories")
}

model Review {
  id        Int    @id @default(autoincrement())
  content   String
  recipe_id Int
  recipe    Recipe @relation(fields: [recipe_id], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER)
  recipes  Recipe[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
